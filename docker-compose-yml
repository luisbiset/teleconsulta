version: "3.9"

services:
  teleconsulta:
    build: .
    container_name: teleconsulta_app
    ports:
      - "${APP_PORT}:8080"
    env_file:
      - .env
    environment:
     APP_ENV: docker
      SQLITE_PATH: ${SQLITE_PATH}
      SQLITE_FILENAME: ${SQLITE_FILENAME}
    volumes:
      - ./data:${SQLITE_PATH}
    restart: unless-stopped

